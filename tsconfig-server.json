{
    "compilerOptions": {
      "outDir": "dist/server",
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
      ],
      "sourceMap": false,
      "allowJs": true,
      "jsx": "react",

      // "rootDir": "src/server",      
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowUnreachableCode": false,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "isolatedModules": true,
      "noUnusedParameters": true,
      "skipDefaultLibCheck": true
    },
    "include": [
      "./src/server/**/*"
    ],
    "exclude": [
      "./node_modules",
      "./dist"
    ]
  }